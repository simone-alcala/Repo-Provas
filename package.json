    "express-async-errors": "^3.1.1",
    "fs": "^0.0.1-security",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.8.0",
    "swagger-ui-express": "^4.5.0"
  },
